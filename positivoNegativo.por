programa {
  funcao inicio() {
    
    inteiro numero

    escreva("digite um número: ")
    leia(numero)

    se( numero > 0){
      escreva("o número é positivo!")
    }
    senao se (numero<0){
      escreva("o número é negativo!")
    }
    senao se(numero == 0){
      escreva("o número é ZERO!")
    }



  }
}
